---
import BaseLayout from '@layouts/BaseLayout.astro';
import { ProfileContent } from '@components/ProfileContent';
---

<BaseLayout
  title="Profile - Bond Math"
  description="View your Bond Math profile, access tokens, and account information"
  currentPath="/profile"
>
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white">Your Profile</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Manage your account and view your access credentials for the Bond Math API.
      </p>
    </div>

    <ProfileContent client:load />
  </div>
</BaseLayout>
