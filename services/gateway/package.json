{
  "name": "@bond-math/gateway",
  "version": "0.1.0",
  "description": "API Gateway Worker for Bond Math - handles Auth0 verification, internal JWT minting, and service routing",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --config ../../iac/workers/gateway.toml",
    "deploy": "wrangler deploy --config ../../iac/workers/gateway.toml",
    "deploy:preview": "wrangler deploy --config ../../iac/workers/gateway.toml --env preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose",
    "lint": "eslint src test --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "echo 'Wrangler handles bundling during deployment'"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.4",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^3.88.0"
  },
  "keywords": [
    "bond-math",
    "gateway",
    "auth0",
    "zero-trust",
    "cloudflare-workers"
  ],
  "author": "Chris Lyons",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.9.10"
  }
}
