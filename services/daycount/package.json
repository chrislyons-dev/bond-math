{
  "name": "@bond-math/daycount",
  "version": "0.1.0",
  "description": "Day-count and year-fraction calculation service for Bond Math",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --config ../../iac/workers/daycount.toml",
    "deploy": "wrangler deploy --config ../../iac/workers/daycount.toml",
    "deploy:preview": "wrangler deploy --config ../../iac/workers/daycount.toml --env preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose",
    "lint": "eslint src test --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "build": "echo 'Wrangler handles bundling during deployment'"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.4",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^3.88.0"
  },
  "keywords": [
    "bond-math",
    "day-count",
    "accrual",
    "fixed-income",
    "cloudflare-workers"
  ],
  "author": "Chris Lyons",
  "license": "MIT",
  "dependencies": {
    "hono": "^4.9.10",
    "hono-pino": "^0.10.3",
    "pino": "^10.0.0"
  }
}
